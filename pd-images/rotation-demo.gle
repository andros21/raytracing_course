size 6 4
set hei 0.6
set lwidth 0.04

amove 0 1
rline 6 0 arrow end

amove 3 0
rline 0 4 arrow end

amove 3 1
begin rotate 30
    rline 2 0
    ellipse 0.1 0.1 fill black
end rotate

amove 3 1
begin rotate 50
    rline 2 1
    ellipse 0.1 0.1 fill gray50
end rotate

arc 1 30 80

amove 3.75 2
text θ

amove 5 2
text v

amove 3.9 3.2
text r(θ)v